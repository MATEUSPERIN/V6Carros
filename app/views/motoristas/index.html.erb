<p id="notice"><%= notice %></p>

<h1>Motoristas</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Cnh</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motoristas.each do |motorista| %>
      <tr>
        <td><%= motorista.nome %></td>
        <td><%= motorista.cpf %></td>
        <td><%= motorista.cnh %></td>
        <td><%= link_to 'Show', motorista %></td>
        <td><%= link_to 'Edit', edit_motorista_path(motorista) %></td>
        <td><%= link_to 'Destroy', motorista, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
<%= link_to 'Cadastrar novo Motorista', new_motorista_path %>
</div>
