<p id="notice"><%= notice %></p>

<h1>Clientes</h1>
<div class="btn-group btn-group-justified">
<table class="table table-hover table-bordered" align="center">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpfcnpj</th>
      <th>Datanascimento</th>
      <th>Rua</th>
      <th>Cidade</th>
      <th>Cep</th>
      <th>Uf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Motorista</th>
      <th>CPF</th>
      <th>CNH</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.cpfCnpj %></td>
        <td><%= cliente.dataNascimento %></td>
        <td><%= cliente.rua %></td>
        <td><%= cliente.cidade %></td>
        <td><%= cliente.cep %></td>
        <td><%= cliente.uf %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.motorista.nome %></td>
        <td><%= cliente.motorista.cpf %></td>
        <td><%= cliente.motorista.cnh %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= form_tag busca_cliente_path, method: :get, class: "navbar-form navbar-rigth" do %>
      <div class="form-group">
        <%= text_field_tag :nome, @nome_a_buscar, class: "form-control" %>
        <%= button_to "Buscar", nil, class: "btn btn-dafault" %>
      </div>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
<%= link_to 'Cadastrar novo Cliente', new_cliente_path %>
</div>
