<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpfcnpj</th>
      <th>Datanascimento</th>
      <th>Rua</th>
      <th>Cidade</th>
      <th>Cep</th>
      <th>Uf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Motorista</th>
      <th>CPF</th>
      <th>CNH</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.cpfCnpj %></td>
        <td><%= cliente.dataNascimento %></td>
        <td><%= cliente.rua %></td>
        <td><%= cliente.cidade %></td>
        <td><%= cliente.cep %></td>
        <td><%= cliente.uf %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.motorista.nome %></td>
        <td><%= cliente.motorista.cpf %></td>
        <td><%= cliente.motorista.cnh %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

