<!DOCTYPE html>
<html>
  <head>
    <title>V6Carros</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if user_signed_in? %>
  <body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      <li>
            <%= link_to  root_path do %>
                <i class=" glyphicon glyphicon-home"></i> V6CARROS
            <% end %>
        </li>
        <li>
            <%= link_to  clientes_path do %>
                <i class="glyphicon glyphicon-user"></i> Cadastrar Cliente
            <% end %>
        </li>
        <li>
            <%= link_to  veiculos_path do%>
                <i class="glyphicon glyphicon-list"></i> Cadastrar Veiculo
            <% end %>
        </li>
        <li>
            <%= link_to  motoristas_path do %>
                <i class="glyphicon glyphicon-user"></i> Cadastrar Motorista
            <% end %>
        </li>
         <li>
            <%= link_to  locacaos_path do %>
                <i class="glyphicon glyphicon-check"></i> Realizar Locação
            <% end %>
        </li>
        <li class="dropdown">
            <%= link_to relatorio_path do %>
              <i class="glyphicon glyphicon-align-justify"></i> Relatórios
            <% end %>
        </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <li>
            <%= link_to  destroy_user_session_path, method: :delete do %>
                <i align="rigth" class="glyphicon glyphicon-off"></i> Sair do Sistema
            <% end %>
        </li>
      </ul>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
  </nav>
<%= yield %>

<% else %>
      <%= yield %>
<% end %>
  </body>
</html>



